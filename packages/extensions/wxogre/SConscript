# Python Imports
import os
import platform

# Build System Importsx
import libs
import helpers

# Pull in build environment from parent SConstruct
Import('env')
envl = env.Clone()

# Find all cpp files in the source directory
sources = helpers.glob(env, 'src', '*.cpp')

# Grab wxWidgets
libs.add_external('wxWidgets', envl)

# If on linux we need gtk
if platform.system() == 'Linux':
    libs.add_external('GTK+ 2.0', envl)

envl.SharedLibrary(target = '_wxogre', source = sources)

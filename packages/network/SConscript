# Copy Our Build Environment
Import('env')
envl = env.Clone()

# Sources
sources = envl.Glob('src', '*.cpp')

# Dependency based libraries and source changes
# Only need boost if we are compling the wrappers
ext_deps = []
int_deps = []
#if env.HasFeature('wrappers'):
#    ext_deps = ['Boost.Python']

if not env.HasFeature('control'):
    int_deps.append('control')
    sources.remove('src/RemoteController.cpp')

# Build Procducts (library will be called 'libram_network.so')
envl.RAMSharedLibrary('network',  source = sources, ext_deps = ext_deps)


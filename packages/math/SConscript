# Build System imports
import buildfiles.libs as libs

# Copy Our Build Environment
Import('env')
envl = env.Clone()

# Only need boost if we are compling the wrappers and the core
if env.HasFeature('wrappers') and env.HasFeature('core'):
    libs.add_internal(envl, 'core')
    libs.add_external(envl, 'Boost.Python')

# Sources
sources = envl.Glob('src', '*.cpp')

# Build Procducts (library will be called 'libram_math.so')
envl.RAMSharedLibrary('math',  source = sources)

# Tests
envt = env.Clone()
envt.Tests(int_deps = 'math')

# Build system imports
import libs
import helpers

# Copy Our Build Environment
Import('env')
envl = env.Clone()

# Sources
sources = ['src/BasicImage.cpp',
           'src/Camera.cpp',
           'src/OpenCVCamera.cpp',
           'src/OpenCVImage.cpp',
           'src/VisionCommunication.cpp',
           'src/ProcessList.cpp',
           'src/GateDetector.cpp',
           'src/BinDetector.cpp',
           'src/RedLightDetector.cpp',
           'src/OrangePipeDetector.cpp',
           'src/Calibration.cpp',
           'src/main.cpp',
           'src/Recorder.cpp']

detectorSources = [
		   'src/DetectorTest.cpp',
		   'src/VisionRunner.cpp'
		  ]

demoSources = [
		'src/DetectorTest.cpp',
		'src/VisionDemo.cpp'
	      ]
	
# Build Library (will be called 'libram_vision.so')
# All build settings for the library are stored in buildfiles/libs.py
helpers.SharedLibrary(envl, 'vision',  source = sources)
# Testing
envt = env.Clone()

# Optical Flow Demo
#envt=env.Clone()
helpers.Program(envt, target = 'OpticalFlowTest',
		source = 'test/src/OpticalFlow.cpp')

# Build simple camera test program and make sure vision library is intalled
helpers.Program(envt, target='AdvCvTest', 
		source = 'test/src/AdvCvTest.cpp',
                int_deps = 'vision')

# Gui Demo
envq = env.Clone()
helpers.Program(envq, target = 'VisionDemo',
		source = demoSources,
		int_deps = 'vision')

# A test
helpers.Program(envt, 'src/test.cpp',int_deps = 'vision')

# Basic camera test
envt.AppendUnique(CCFLAGS = '-Wno-unused')
envt.Program(target = 'BasicCvTest', source = 'test/src/BasicCvTest.c')

# Basic record test
envt.Program(target = 'RecordTest', source = 'test/src/CvRecordVideoTest.c')

# Detector Test
envt = env.Clone()
helpers.Program(envt, target = 'DetectorTest', 
		source=detectorSources, int_deps = ['vision'])

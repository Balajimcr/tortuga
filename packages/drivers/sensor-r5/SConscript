# Copy Our Build Environment
Import('env')
envl = env.Clone()

envl.Append(LIBS = ['m'])
# Build Library (will be called 'libram_carnetix.so')
envl.Append(CPPPATH = ['include'])
envl.RAMSharedLibrary('sensor',  source = ['src/sensorapi.c'])

# Testing and Demo Programs
envt = env.Clone()

# Needed because of steves include pattern
envt.AppendUnique(CPPPATH = ['include'])

# Build the ctx and consolemon
envt.RAMProgram(target = 'sensortest', 
                source = 'test/src/sensortest.c',
                int_deps = 'sensor')

envt.RAMProgram(target = 'lcdshow', 
                source = 'lcdshow.c',
                int_deps = 'sensor')

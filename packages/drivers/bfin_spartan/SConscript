# Copy Our Build Environment
Import('env')
envl = env.Clone()

# Build Library (will be called 'libram_bfin_spartan.so')

# Find all cpp files in the source directory
sources = envl.Glob('src', '*.c')
envl.RAMSharedLibrary('bfin_spartan',  source = sources)


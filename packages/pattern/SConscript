# Build System Imports
import libs
import helpers

# Pull in build environment from parent SConstruct
Import('env')
envl = env.Clone()

# Find all cpp files in the source directory
sources = helpers.glob(env, 'src', '*.cpp')

# Grab Boost
libs.add_external(envl, 'Boost')

# Build Library (will be called 'libram_pattern.so')
envl.RAMSharedLibrary('pattern', source = sources)

# Unit Tests
envt = env.Clone()
envt.Tests(int_deps = 'pattern')

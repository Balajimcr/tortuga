# Build system imports
import libs
import helpers

# Copy Our Build Environment
Import('env')
envl = env.Clone()



# Sources
sources = helpers.glob(env, 'src', '*.cpp')

# Build Procducts (library will be called 'libram_vehicle.so')
helpers.SharedLibrary(envl, 'control',  source = sources)
print '**** Control CCFLAGS',envl['CPPFLAGS']

# Test Control Program
envt = env.Clone()
envt.Append(LIBS = ['boost_program_options-gcc'])
helpers.Program(envt, target = 'ControlTest', 
                source = 'test/src/ControlTest.cpp',
                int_deps = ['vehicle', 'control']),
#                ext_deps = ['Boost.ProgramOptions'])

envt = env.Clone()
envt.Tests(int_deps = 'control')
import os

Import('env')
envl = env.Clone()

# Find all cpp files in the source directory
sources = envl.Glob('src', '*.cpp')

# Add wxWidgets and OpenCV
envl.Append(CPPPATH = 'include')

if 'posix' == os.name:
    envl.AppendUnique(CCFLAGS = ['-fno-strict-aliasing', 
                                 '-Wno-deprecated-declarations'])
if envl['RAM_OS'] == 'darwin':
    envl.AppendUnique(FRAMEWORKS = ['OpenGL'])

envl.RAMProgram(target = 'VisionTool', source = sources,
               int_deps = ['vision'], ext_deps = ['wxWidgets'])


import os

# Copy Our Build Environment
Import('env')
envl = env.Clone()

envl.Append(CPPPATH = 'src')

if 'posix' == os.name:
    envl.AppendUnique(CCFLAGS = ['-fno-strict-aliasing'])

sources = ['src/JAUS_helpers.cpp',
           'src/JAUS_Message.cpp',
           'src/JAUS_active_demo.cpp']

# Build the ctx and consolemon
envl.RAMProgram(target = 'JAUSDemo', 
		source = sources,
                int_deps = ['thruster'])
